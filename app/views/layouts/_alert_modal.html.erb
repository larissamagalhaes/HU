<!-- Modal -->
<div class="modal fade" id="alertModal<%= @question.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Do you really want to delete the ask?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
        <%= link_to "Yes", { controller: :questions, action: :destroy, id: @question.id }, method: :delete, :class => "btn btn-danger btn-small" %>
      </div>
    </div>
  </div>
</div>
